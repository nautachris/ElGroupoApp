@using ElGroupo.Web.Models.Home
@model DashboardModel

<style type="text/css">
    .row.past-events, .row.draft-events {
        display: none;
    }

    a.no-decoration {
        color: #808080;
        padding-bottom: 0px;
        border-bottom: none;
    }

    li.new-event {
        background-color: aquamarine;
        border-radius: 25px;
        font-weight: 300;
    }



    ul {
        list-style: none;
    }

    li span {
        display: inline-block;
        width: 100%;
    }

    a {
        color: blue;
    }

    .page-nav {
        text-align: center;
        list-style: none;
    }

        .page-nav a {
            margin-left: 60px;
        }

    .bold {
        font-weight: bold;
    }
    #secDeleteDialog{
        display:none;
    }

</style>
<section id="secDeleteDialog">
    <div style="text-align:center">
        <div class="row">
            <h2><span id="spanDeleteEventName">Do you want to delete the event?</span></h2>
        </div>
        <div class="row">
            <div class="col span-1-of-2">
                <button class="btn btn-primary width-100" id="btnConfirmDelete">Yes</button>
            </div>
            <div class="col span-1-of-2">
                <button class="btn btn-ghost width-100" id="btnCancelDelete">No</button>
            </div>
        </div>
    </div>

     
</section>
<section id="secMain">

    <h2>My Fuckin' Bitchin' Events</h2>
    <div class="page-nav">
        <div class="col span-1-of-3">
            <a class="links bold" data-link-type="future-events" href="#">Upcoming Events (@Model.FutureEvents.Count.ToString())</a>
        </div>
        <div class="col span-1-of-3">
            <a class="links" data-link-type="past-events" href="#">Past Events (@Model.PastEvents.Count.ToString())</a>
        </div>
        <div class="col span-1-of-3">
            <a class="links" data-link-type="draft-events" href="#">Drafts  (@Model.Drafts.Count.ToString())</a>
        </div>
        

       

        

    </div>
    <div class="row tab future-events">
        @if (Model.FutureEvents.Count > 0)
        {
            @Html.Partial("_DashboardEventList", Model.FutureEvents)

        }
        else
        {
            <div class="col width-100" style="text-align:center;">
                <h3>You have no upcoming events</h3>
            </div>

        }

    </div>
    <div class="row tab past-events">
        @if (Model.PastEvents.Count > 0)
        {
            @Html.Partial("_DashboardEventList", Model.PastEvents)


        }
        else
        {
            <div class="col width-100" style="text-align:center;">
                <h3>You have no past events</h3>
            </div>

        }

    </div>
    <div class="row tab draft-events">
@if (Model.Drafts.Count > 0)
{
    @Html.Partial("_DashboardEventList", Model.Drafts)

}
else
{
    <div class="col width-100" style="text-align:center;">
        <h3>You have no draft events</h3>
    </div>

}

    </div>
</section>

@section Scripts{
    <script type="text/javascript" src="~/content/scripts/home/dashboard.js"></script>

}