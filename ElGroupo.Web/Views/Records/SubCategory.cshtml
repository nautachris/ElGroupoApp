@using ElGroupo.Web.Models.Records
@model ViewSubCategoryModel
<section style="text-align:center">
    <input type="hidden" asp-for="@Model.Id" />
    <a asp-controller="Records" asp-action="EditCategory" asp-route-categoryId="@Model.ParentCategory.Id">Return to @Model.ParentCategory.Name</a>
    <h3>Edit Sub Category</h3>
    <h2>@Model.Name</h2>


    <h3>Items</h3>
    <div id="item-list">
        @Html.Partial("_ItemList", Model.RecordItems)
    </div>


    <button class="btn btn-primary add-item-btn">Add New Item</button>
    <div class="add-item" style="display:none;">
        <label for="txtAddItem">Item Name:</label>
        <input type="text" id="txtAddItem" style="width:300px;" />
        <button class="cancel-add-item">Cancel</button>
        <button class="confirm-add-item">Add</button>
    </div>


    <div style="margin:45px;">
        <h3>Default Elements</h3>
        <div id="element-list">
            @Html.Partial("_ElementList", Model.DefaultElements)
        </div>
    </div>

    <div style="margin:45px;">
        <button class="btn btn-primary add-element-btn">Add New Default Element</button>
        <div class="add-element" style="display:none;">
            <div style="width:100%;">
                <label for="selElement">Element:</label>
                <select id="selElement" style="width:300px;">
                    @foreach (var item in Model.AllElements)
                    {
                        <option value="@item.Id">@item.Name</option>

                    }
                </select>
            </div>
            <div style="width:100%">
                <label for="chkIsPrimary">Primary Display?</label>
                <input type="checkbox" id="chkPrimaryDisplay" />
            </div>

            <button class="cancel-add-element">Cancel</button>
            <button class="confirm-add-element">Add</button>
        </div>
    </div>
</section>



@section Scripts{
    <script type="text/javascript" src="~/content/scripts/records/records-admin.js"></script>
    <script type="text/javascript" src="~/content/scripts/records/sub-category.js"></script>

}