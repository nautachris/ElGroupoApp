@using ElGroupo.Web.Models.Records
@model IEnumerable<ViewItemModel>

@{
    Layout = null;
}

<div style="text-align:center;">
    <table style="margin:0 auto; text-align:center;">
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-controller="Records" asp-action="EditItem" asp-route-itemId="@item.Id">@item.Name</a></td>
                <td><a data-remove-item data-item-id="@item.Id">Remove</a></td>
            </tr>

        }
    </table>
</div>