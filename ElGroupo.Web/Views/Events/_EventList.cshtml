@using ElGroupo.Web.Models.Events
@model IEnumerable<EventInformationModel>
@{
    Layout = null;
}

<style type="text/css">
    li:hover {
        background-color: lightblue;
    }

    li div {
    }

    li > div {
        float: left;
        display: table-cell;
        width: 100%;
        vertical-align: middle;
    }

        li > div > span, li > div > img {
            /*vertical-align: middle;*/
            /*display: table-cell;*/
        }

        li > div::after {
            display: block;
            height: 2px;
            background-color: #e67e22;
            content: "";
            width: 85%;
            margin: 0 auto;
            margin-top: 5px;
        }
</style>
@if (Model != null)
{



    <div class="row width-100">
        <ul>

            @foreach (var e in Model)
            {
                <li style="list-style:none;">
                    <div class="width-100">
                        <span class="col span-4-of-8">@e.Name</span>
                        <span class="col span-2-of-8">Created By: @e.OrganizerName</span>
                        <a class="col span-1-of-8 btn btn-primary" asp-route="editevent" asp-route-eid="@e.Id">Edit</a>
                    </div>
                    <div class="width-100">
                        <span class="col span-4-of-8">@e.StartDate</span>
                        <span class="col span-4-of-8">@e.EndDate</span>
                    </div>

                </li>

            }
        </ul>
    </div>
}
else
{
    <h2>Search results will appear here</h2>
}
